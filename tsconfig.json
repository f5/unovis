{
  "compileOnSave": false,
  "compilerOptions": {
      "baseUrl": ".",
      "downlevelIteration": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "declaration": false,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "importHelpers": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "lib": [
          "es2017",
          "es2016",
          "es2015",
          "dom"
      ],
      "target": "es2015",
  },
  "exclude": [
      "node_modules",
      "*/node_modules/*",
      "**/*.spec.ts"
  ]
}
