{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "paths": {
      "@src/*": ["packages/dev/src/*"],
    },
    "types": [
      "node",
      "webpack-env",
      "cypress",
      "@percy/cypress"
    ],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
