{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "declaration": true,
    "paths": {
      "@/*": ["*"]
    },
    "noImplicitAny": true,
    "alwaysStrict": true,
    // To be enabled:
    // "strictNullChecks": true,
    // "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "skipLibCheck": true
  },
  "exclude": [
    "index.ts",
    "maps.ts",
    "vite.config.ts"
  ]
}
