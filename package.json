{
  "name": "volterra-vis",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "dev": "cd packages/dev-demo; npm run dev",
    "storybook": "cd packages/vis-angular; npm run storybook",
    "build": "npm run build:lib; cd packages/dev-demo; npm run build",
    "build:lib": "cd packages/vis && npm run build",
    "build:vis-angular": "cd packages/vis-angular && npm run build",
    "build:storybook": "cd packages/vis-angular && npm run build-storybook",
    "publish:lib": "cd packages/vis; npm run build; npm publish",
    "lint": "eslint ./ --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint ./ --ext .js,.jsx,.ts,.tsx --fix --ignore-path .gitignore"
  },
  "devDependencies": {
    "@types/d3": "^6.7.0",
    "@types/jest": "^26.0.20",
    "@types/leaflet": "^1.5.19",
    "@types/node": "^14.14.20",
    "@types/topojson-client": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-import-newlines": "^1.1.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.2",
    "typescript": "~4.2.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
