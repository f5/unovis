{
  "name": "volterra-vis",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "postinstall": "sh postinstall.sh",
    "dev": "cd packages/dev-demo; npm run dev",
    "storybook:angular": "cd packages/vis-angular && npm run storybook",
    "storybook:react": "cd packages/vis-react && npm run storybook",
    "build": "npm run build:lib && npm run build:vis-react-lib && npm run build:vis-react-storybook && npm run build:vis-angular-lib && npm run build:vis-angular-storybook && npm run build:dev-demo",
    "build:lib": "cd packages/vis && npm run build",
    "build:dev-demo": "cd packages/dev-demo && npm run build",
    "build:vis-angular-lib": "cd packages/vis-angular && npm run build",
    "build:vis-angular-storybook": "cd packages/vis-angular && npm run build-storybook",
    "build:vis-react-lib": "cd packages/vis-react && npm run build",
    "build:vis-react-storybook": "cd packages/vis-react && npm run build-storybook",
    "publish:lib": "cd packages/vis && npm run build && npm run publish-dist",
    "publish:vis-angular-lib": "cd packages/vis-angular && npm run build && npm publish",
    "publish:vis-react-lib": "cd packages/vis-react && npm run build && npm run publish-dist",
    "publish:all": "sh prepublish.sh && sh publish.sh",
    "lint": "eslint ./ --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint ./ --ext .js,.jsx,.ts,.tsx --fix --ignore-path .gitignore",
    "gather-licenses": "for p in packages/*; do npx license-report --package=$p/package.json --config license-report-config.json --output=table > $p/licences.txt; done",
    "install:clean": "for p in packages/*; do rm -rf $p/node_modules; done; rm -rf node_modules; npm i"
  },
  "devDependencies": {
    "@types/node": "^16.11.14",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-import-newlines": "^1.1.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.4",
    "license-report": "^4.5.0",
    "lint-staged": "^12.1.3",
    "npm-force-resolutions": "^0.0.10",
    "typescript": "~4.2.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --quiet --cache --fix"
  },
  "resolutions": {
    "js-yaml": "3.14.1",
    "jszip": "3.7.1"
  }
}
