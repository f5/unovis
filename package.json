{
  "name": "volterra-vis",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "web/"
  ],
  "scripts": {
    "dev": "lerna run dev --stream",
    "build": "lerna run build",
    "build:lib": "cd packages/vis && yarn build",
    "build:watch": "lerna run dev:parallel --stream --parallel",
    "test": "lerna run test --stream",
    "lint": "eslint \"web/**/*.ts\" \"packages/**/*.ts\" --ignore-path .gitignore",
    "lint:fix": "eslint \"web/**/*.ts\" \"packages/**/*.ts\" --fix --ignore-path .gitignore",
    "lint:staged": "for file in $(git diff --cached --name-only | grep -E 'src\\/.+\\.(ts)$'); do git show \":$file\" | npx eslint \"$file\" --fix; git add \"$file\"; done"
  },
  "devDependencies": {
    "@types/d3": "^5.7.2",
    "@types/jest": "^26.0.7",
    "@types/leaflet": "^1.5.17",
    "@types/node": "^14.0.27",
    "@types/topojson": "^3.2.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-pack": "git+ssh://git@gitlab.com:volterra/ves-ui-packages/git-pack.git#v0.0.13",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "typescript": "^4.0.2"
  },
  "precommit": "lint"
}
