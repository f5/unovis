{
  "name": "volterra-vis",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "web/"
  ],
  "scripts": {
    "dev": "lerna run dev --stream",
    "build": "lerna run build",
    "build:lib": "cd packages/vis && yarn build",
    "publish": "cd packages/vis; yarn build; npm publish",
    "build:watch": "lerna run dev:parallel --stream --parallel",
    "test": "lerna run test --stream",
    "lint": "eslint ./ --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint ./ --ext .js,.jsx,.ts,.tsx --fix --ignore-path .gitignore",
    "lint:staged": "for file in $(git diff --cached --name-only); do echo \"$file\"; done"
  },
  "devDependencies": {
    "@types/d3": "^6.7.0",
    "@types/jest": "^26.0.20",
    "@types/leaflet": "^1.5.19",
    "@types/node": "^14.14.20",
    "@types/topojson-client": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "typescript": "~4.2.4"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
